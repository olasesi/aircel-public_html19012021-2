{{ header }}
{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right float-right">
	  <a type="submit"  data-toggle="tooltip" title="Add" href="{{ save }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
	  {% for breadcrumb in breadcrumbs %}
        <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
		{% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
  {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
	{% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
		<div class="panel panel-default card">
			<div class="panel-heading">
				<h3 class="panel-title card-header"><i class="fa fa-user"></i>{{ text_payment_settlement }}</h3>
			</div>
			<div class="panel-body card-body">
			<!----------------->
  <div style="page-break-after: always;">
		<div class="well row p-3 clearfix">
			<div class="col-sm-4"><h4>{{ total_text }}</h4>{{ total_amount }}</div>
			<div class="col-sm-4"><h4>{{ commision_product }}</h4> {{ total_commission }}</div>
			<div class="col-sm-4"><h4>{{ text_pay_amount }}</h4>{{ total_pay }}</div>
		</div>

    <table class="table table-bordered">
      <thead>
        <tr>
          <td>{{ column_id }}</td>
          <td class="text-right"><b>{{ column_transacton_id }}</b></td>
          <td class="text-right"><b>{{ column_payment_mode }}</b></td>
          <td class="text-right"><b>{{ column_payment_date }}</b></td>
          <td class="text-right"><b>{{ column_commentt }}</b></td>
          <td class="text-right"><b>{{ column_statuss }}</b></td>
          <td class="text-right"><b>{{ column_actionn }}</b></td>
		  
        </tr>
      </thead>
      <tbody>
      {% if commission_history %}
	  {% for commission_hist in commission_history%}
        <tr>
          <td class="text-right">{{ commission_hist.id }}</td>
          <td class="text-right">{{ commission_hist.transaction_id }}</td>
          <td class="text-right">{{ commission_hist.payment_mode }}</td>
          <td class="text-right">{{ commission_hist.created_date }}</td>
          <td class="text-right">{{ commission_hist.comment }}</td> 
          <td class="text-right">{{ commission_hist.status_id }}</td> 
          <td class="text-right">{% if commission_hist.link_show %}<a href="{{ commission_hist.link }}" class="btn btn-primary" ><i class="fa fa-pencil-square-o fas fa-edit" aria-hidden="true"></i>
</a>{% endif %}</td> 
        </tr>
		{% endfor %}
		{% endif %}
      </tbody>
    </table>
  </div>
			<!----------------->
				</div>
			</div>
		</div>
    </div>
{{ footer }}
<script>
function changeStatus() {
    var x = document.getElementById("status").value;
	var y="Disable";
	if(x==1){
		var y="Enable";
		}
    document.getElementById("change_status").innerHTML = y +" all products";
    document.getElementById("status_value").value = x;
	
}
</script>