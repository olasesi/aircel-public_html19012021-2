{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right float-right">
        <button type="submit" form="form-pts-blog" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default btn-light"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
   {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
      {% endif %}
    <div class="panel panel-default card">
      <div class="panel-heading">
        <h3 class="panel-title card-header"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body card-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-pts-blog" class="form-horizontal">
          <div class="form-group row">
            <label class="col-sm-2 control-label col-form-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_purpletree_sellerblog_name" value="{{ module_purpletree_sellerblog_name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
             {% if error_name %}
              <div class="text-danger">{{ error_name }}</div>
                {% endif %}
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 control-label col-form-label" for="input-limit">{{ entry_limit }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_purpletree_sellerblog_limit" value="{{ module_purpletree_sellerblog_limit }}" placeholder="{{ entry_limit }}" id="input-limit" class="form-control" />
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 control-label col-form-label" for="input-width">{{ entry_width }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_purpletree_sellerblog_width" value="{{ module_purpletree_sellerblog_width }}" placeholder="{{ entry_width }}" id="input-width" class="form-control" />
             {% if error_width %}
              <div class="text-danger">{{ error_width }}</div>
                {% endif %}
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 control-label col-form-label" for="input-height">{{ entry_height }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_purpletree_sellerblog_height" value="{{ module_purpletree_sellerblog_height }}" placeholder="{{ entry_height }}" id="input-height" class="form-control" />
             {% if error_height %}
              <div class="text-danger">{{ error_height }}</div>
                {% endif %}
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 control-label col-form-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_purpletree_sellerblog_status" id="input-status" class="form-control">
               {% if module_purpletree_sellerblog_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
               {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}